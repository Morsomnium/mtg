#!/usr/bin/env groovy

pipeline {

    agent {
        docker {
            image 'node'
            args '-u root'
        }
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building...'
                sh 'npm install'
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'Deploying...'
                sh 'chmod +x jenkins/frontend/*'
                sh 'cd frontend'
                sh 'npm build'
            }
        }
    }
}
